<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#474749"

    android:paddingBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:id="@+id/pdfImage"
        app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/pdf"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:id="@+id/txtpolicies"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pdfImage"
        android:text="HR Policies"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/pdfImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/hintText"
        android:layout_marginTop="@dimen/_6sdp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>