<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/latesittingFragment"
        android:background="@color/charcoal"
        tools:context=".ui.fragments.latesitting.LateSittingDetails">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/leftGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/rightGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="20dp"
                    app:layout_constraintStart_toStartOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:id="@+id/radiogrouplayout"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline">

                    <worker8.com.github.radiogroupplus.RadioGroupPlus
                        android:id="@+id/radioGroupProjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/firstlayout1"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toStartOf="@+id/secondlayout1"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RadioButton
                                    android:id="@+id/radioOthers"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:buttonTint="@color/yellow"
                                    android:checked="false"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/txtOthers"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Others"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/radioOthers"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/secondlayout1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/firstlayout1"
                                app:layout_constraintTop_toTopOf="parent">

                                <RadioButton
                                    android:id="@+id/radioProjects"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:visibility="visible"
                                    app:buttonTint="@color/yellow"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/txtProjects"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Projects"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:visibility="visible"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/radioProjects"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </worker8.com.github.radiogroupplus.RadioGroupPlus>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtprojectname"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text = "Project Name"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toBottomOf="@+id/radiogrouplayout"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_33sdp"
                    android:id="@+id/mcvprojectlayout"
                    app:cardElevation="@dimen/_5sdp"
                    android:visibility="visible"
                    android:translationZ="@dimen/_50sdp"
                    app:layout_constraintTop_toBottomOf="@+id/txtprojectname"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/filtersbackground">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtselectedproject"
                            android:text="Select project"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_17sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#B9B7B7"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_height="wrap_content"
                            android:id="@+id/recyclerSelectedProjects"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/projectdownarrow"
                            android:orientation="horizontal"
                            android:maxLines="2"
                            android:scrollbars="vertical"
                            tools:listitem="@layout/selected_option_layout"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/projectdownarrow"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/arrowbelow"
                            app:tint="@color/yellow" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/mcvprojectlayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/layoutProjects"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mcvprojects"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:id="@+id/text"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:id="@+id/rvprojects"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:visibility="gone"
                    tools:itemCount="6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/lovoptions"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstarttime2"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutProjects"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtstarttime"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Start Time"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutProjects"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_33sdp"
                    android:id="@+id/starttimelayout"
                    app:cardElevation="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/txtstarttime"
                    app:cardBackgroundColor="@color/dark_grey"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    android:layout_marginTop="@dimen/_10sdp"
                    style="@style/filtersbackground">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/selectedstarttime"
                            android:text="00:00"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_17sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#B9B7B7"
                            />
                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:id="@+id/starttimgimg"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/clock"
                             />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    android:id="@+id/changingview"
                    app:layout_constraintTop_toBottomOf="@+id/starttimelayout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtendtime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="End Time"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:id="@+id/mcvendtimelayout"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/txtendtime"
                        app:cardBackgroundColor="@color/dark_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/filtersbackground">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtselectedendtime"
                                android:text="00:00"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="#B9B7B7"
                                />
                            <ImageView
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:id="@+id/imgcheckintime"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:src="@drawable/clock"
                                 />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalhours"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mcvendtimelayout"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text = "Total Hours"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:id="@+id/mcvtotalhours"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/totalhours"
                        app:cardBackgroundColor="@color/dark_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/filtersbackground">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/selectedhours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="---"
                                android:textColor="#B9B7B7"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDescription"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/changingview"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Description"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#474749"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:cardElevation="0dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescription">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/radio_group">

                        <EditText
                            android:id="@+id/edtDescription"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="Write here"
                            android:singleLine="false"
                            android:inputType="textMultiLine"
                            android:textColor="#ffffff"
                            android:textColorHint="#B9B7B7"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/_10sdp"
                            android:maxLength="200"
                            android:gravity="top|start"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/changetimelayout"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintStart_toEndOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardDescription"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtchangetime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Change Time"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:id="@+id/mcvchangetime"
                        app:cardElevation="0dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/txtchangetime"
                        app:cardBackgroundColor="@color/dark_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        style="@style/filtersbackground">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:id="@+id/decreasechangetime"
                                android:layout_marginStart="@dimen/_8sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:src="@drawable/subtarct"
                                />
                            <ImageView
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:id="@+id/increasechangetime"
                                android:layout_marginStart="@dimen/_8sdp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:src="@drawable/add"
                                />

                            <TextView
                                android:id="@+id/txtselectedchangetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_13sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="---"
                                android:textColor="#B9B7B7"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintTop_toTopOf="@+id/increasechangetime"
                                app:layout_constraintBottom_toBottomOf="@+id/increasechangetime"
                                app:layout_constraintStart_toEndOf="@+id/decreasechangetime"
                                 />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="38dp"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="@+id/leftGuideline"
                    app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:id="@+id/submit"
                    android:layout_marginStart="@dimen/_85sdp"
                    android:layout_marginEnd="@dimen/_85sdp"
                    app:layout_constraintTop_toBottomOf="@+id/changetimelayout"
                    android:background="@drawable/loginbuttonbackground"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="Submit"
                        android:gravity="center"
                        android:id="@+id/txtsubmitt"
                        android:textSize="15sp"
                        android:textColor="@color/dark_purple"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
