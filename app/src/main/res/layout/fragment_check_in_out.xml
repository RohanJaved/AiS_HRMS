<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#393940"
        android:id="@+id/attendancehistoryfragment"
        tools:context=".ui.fragments.attendancehistory.AttendanceHistory">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_percent="0.07"
            android:orientation="vertical"
            android:id="@+id/leftGuideline"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rightGuideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_height="50dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            app:cardBackgroundColor="#474747"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:id="@+id/mcvfromDate"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/calender"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtfromdate"
                    app:layout_constraintStart_toEndOf="@+id/date"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="From Date"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="#85827f"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="50dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@+id/mcvfromDate"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            app:cardBackgroundColor="#474747"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:id="@+id/mcvtoDate"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/todate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/calender"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txttodate"
                    app:layout_constraintStart_toEndOf="@+id/todate"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="To Date"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="#85827f"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="50dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/mcvtoDate"
            android:id="@+id/attendancehistory"
            android:background="@drawable/loginbuttonbackground"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Search"
                android:textColor="#ffffff"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rvattendancehistory"
            android:visibility="gone"
            tools:listitem="@layout/attendancehistoryitem"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/attendancehistory"
            app:layout_constraintBottom_toBottomOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>