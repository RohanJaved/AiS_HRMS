<?xml version="1.0" encoding="utf-8"?>
   <layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#474749">
    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:id="@+id/arrow"
        android:translationZ="@dimen/_14sdp"
        app:layout_constraintTop_toTopOf="@+id/mcvDt0"
        app:layout_constraintBottom_toBottomOf="@+id/mcvDt0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_2sdp"
        android:src="@drawable/next"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvDt0"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_width="match_parent"
        app:strokeWidth="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:strokeColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#3d3d3d"
        app:cardCornerRadius="@dimen/_10sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:text="Dept"
                android:id="@+id/txtdepartment"
                android:layout_marginStart="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_17sdp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:text="Total Members"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/txtteammembers"
                android:layout_marginStart="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/txtdepartment"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="P"
                android:layout_marginStart="@dimen/_20sdp"
                android:id="@+id/txtpresent"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#0D894F"
                app:layout_constraintEnd_toStartOf="@+id/txtabsent"
                app:layout_constraintTop_toTopOf="@+id/txtdepartment"
                app:layout_constraintStart_toEndOf="@+id/txtdepartment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="A"
                android:id="@+id/txtabsent"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#F04438"
                app:layout_constraintTop_toTopOf="@+id/txtdepartment"
                app:layout_constraintEnd_toStartOf="@+id/txtleave"
                app:layout_constraintStart_toEndOf="@+id/txtpresent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="L"
                android:id="@+id/txtleave"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#1FB6FF"
                app:layout_constraintTop_toTopOf="@+id/txtdepartment"
                app:layout_constraintStart_toEndOf="@+id/txtabsent"
                app:layout_constraintEnd_toStartOf="@+id/txtlatearrival"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="L"
                android:id="@+id/txtlatearrival"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#F7A91D"
                android:layout_marginEnd="@dimen/_3sdp"
                app:layout_constraintTop_toTopOf="@+id/txtdepartment"
                app:layout_constraintStart_toEndOf="@+id/txtleave"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="0"
                android:layout_marginStart="@dimen/_20sdp"
                android:id="@+id/txtpresentcount"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/txtabsent"
                app:layout_constraintBottom_toBottomOf="@+id/txtteammembers"
                app:layout_constraintTop_toTopOf="@+id/txtteammembers"
                app:layout_constraintStart_toEndOf="@+id/txtdepartment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="0"
                android:id="@+id/txtabsentcount"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/txtteammembers"
                app:layout_constraintTop_toTopOf="@+id/txtteammembers"
                app:layout_constraintEnd_toStartOf="@+id/txtleave"
                app:layout_constraintStart_toEndOf="@+id/txtpresent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/txtteammembers"
                android:id="@+id/txtleavecount"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/txtteammembers"
                app:layout_constraintStart_toEndOf="@+id/txtabsent"
                app:layout_constraintEnd_toStartOf="@+id/txtlatearrival"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/txtteammembers"
                android:id="@+id/txtlatearrivalcount"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/txtteammembers"

                app:layout_constraintStart_toEndOf="@+id/txtleave"
                app:layout_constraintEnd_toEndOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>