<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#393940"
    android:padding="7dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_height="160dp"
        android:layout_width="0dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#474747"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:id="@+id/mcvAttendanceDetail"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                android:text="Name"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginStart="15dp"
                android:text="Email"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/datehistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
                android:layout_marginStart="15dp"
                android:text="Date"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/checkInTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datehistory"
                android:layout_marginStart="15dp"
                android:text="CheckInTime"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/checkOutTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkInTime"
                android:layout_marginStart="15dp"
                android:text="CheckOutTime"
                android:textSize="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtname"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Date"
                android:textSize="13dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/yellow"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtemail"
                app:layout_constraintTop_toBottomOf="@+id/txtname"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Date"
                android:textSize="13dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/yellow"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtdatehistory"
                app:layout_constraintTop_toBottomOf="@+id/txtemail"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Date"
                android:textSize="13dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/yellow"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtcheckintimehistory"
                app:layout_constraintTop_toBottomOf="@+id/txtdatehistory"
                app:layout_constraintEnd_toEndOf="parent"

                android:text="Date"
                android:textSize="13dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/yellow"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtcheckouthistory"
                app:layout_constraintTop_toBottomOf="@+id/txtcheckintimehistory"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Date"
                android:textSize="13dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/yellow"
                android:layout_marginTop="5dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>