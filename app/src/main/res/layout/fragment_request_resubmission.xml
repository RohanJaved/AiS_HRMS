<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/charcoal"
        android:id="@+id/requestResubmissionfragment"
        >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtselectcategory"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Select Category"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_33sdp"
        android:id="@+id/mcvcategorylayout"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/txtselectcategory"
        app:cardBackgroundColor="@color/dark_grey"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/filtersbackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtcategorytype"
                android:text="----"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#B9B7B7"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categorydownarrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/arrowbelow"
                app:tint="@color/yellow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/mcvcategory"
        android:visibility="gone"
        android:translationZ="@dimen/_50sdp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/mcvcategorylayout"
        app:cardBackgroundColor="@color/dark_grey"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        android:layout_marginTop="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_5sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvcategorytype"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/leavestypeitem"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtdate"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Date"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@+id/mcvcategory"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_33sdp"
        android:id="@+id/mcvdatelayout"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/txtdate"
        app:cardBackgroundColor="@color/dark_grey"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/filtersbackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtselecteddate"
                android:text="----"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#B9B7B7"
                />
            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:id="@+id/imgcalendar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/calendar_download"
                app:tint="@color/yellow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        android:id="@+id/changingview"
        app:layout_constraintTop_toBottomOf="@+id/mcvdatelayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtcheckintime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Check-in Time"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="@dimen/_33sdp"
            android:id="@+id/mcvcheckintimelayout"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtcheckintime"
            app:cardBackgroundColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/filtersbackground">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcheckinselectedtime"
                    android:text="00:00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#B9B7B7"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgcheckintime"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/arrowbelow"
                    app:tint="@color/yellow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtcheckouttime"
            app:layout_constraintStart_toStartOf="@+id/mcvcheckouttimelayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Check-out Time"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="@dimen/_33sdp"
            android:id="@+id/mcvcheckouttimelayout"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtcheckintime"
            app:cardBackgroundColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/filtersbackground">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtcheckoutselectedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="00:00"
                    android:textColor="#B9B7B7"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgxcheckouttime"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/arrowbelow"
                    app:tint="@color/yellow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtchooseleavetype"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mcvcheckintimelayout"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Choose Leave Type"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:id="@+id/mcvchooseleavetypelayout"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtchooseleavetype"
            app:cardBackgroundColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/filtersbackground">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtselectedleave"
                    android:text="----"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#B9B7B7"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgleavedoenarrowr"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/arrowbelow"
                    app:tint="@color/yellow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mcvleave"
            android:visibility="gone"
            android:translationZ="@dimen/_100sdp"
            app:strokeColor="@color/stroke_color"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/mcvchooseleavetypelayout"
            app:cardBackgroundColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rvleavetype"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/leavestypeitem"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReason"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/changingview"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Reason"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#474749"
        app:cardCornerRadius="@dimen/_10sdp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/stroke_color"
        app:cardElevation="0dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@+id/txtReason">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group">

            <EditText
                android:id="@+id/edtReason"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Write here"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:textColor="#ffffff"
                android:textColorHint="#B9B7B7"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:gravity="top|start"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="38dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/leftGuideline"
        app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/submit"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginEnd="@dimen/_85sdp"
        app:layout_constraintTop_toBottomOf="@+id/cardReason"
        android:background="@drawable/loginbuttonbackground"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Submit"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/dark_purple"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>