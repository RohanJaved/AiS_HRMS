<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/opotionitemlayout" >

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:id="@+id/checkboximage"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/empty_checkbox" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxtext"
            app:layout_constraintTop_toTopOf="@+id/checkboximage"
            app:layout_constraintBottom_toBottomOf="@+id/checkboximage"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Select"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/checkboximage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>