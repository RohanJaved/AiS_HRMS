<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.appinsnap.aishrm.ui.activities.login.viewModel.AuthenticationViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/charcoal"
        tools:context=".ui.activities.login.LoginActivity">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_percent="0.07"
            android:orientation="vertical"
            android:id="@+id/leftGuideline"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rightGuideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93"
            />
        <ImageView
            android:layout_height="60dp"
            android:layout_width="90dp"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo"
            android:layout_marginTop="140dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width='wrap_content'
            android:id="@+id/txtAisReporting"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintEnd_toEndOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="10dp"
            android:text="AiS Reporting"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:startIconDrawable="@drawable/email"
            app:startIconTint="@color/yellow"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxStrokeWidth="0.4dp"
            app:boxBackgroundColor="@color/light_grey"
            android:layout_marginTop="45dp"
            android:id="@+id/tilemail"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@+id/txtAisReporting"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:boxStrokeColor="@color/yellow"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="15dp"
                android:maxLength="35"
                android:id="@+id/edtemail"
                android:textColorHint="#95928e"
                android:textColor="#ffffff"
                android:hint="Enter Email"
                android:textSize="14dp"
                android:inputType="text"
                android:fontFamily="@font/montserrat_light"
                android:singleLine="true"
                android:paddingBottom="15dp"
                android:background="@drawable/roundcorener_strokewhite"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:startIconDrawable="@drawable/password"
            app:startIconTint="@color/yellow"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/yellow"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxBackgroundColor="@color/light_grey"
            app:hintEnabled="false"
            android:id="@+id/tilpassword"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@+id/tilemail"
            android:focusableInTouchMode="true"
            app:boxStrokeColor="@color/yellow"
            app:boxStrokeWidth="0.4dp"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="8dp"
                android:maxLength="20"
                android:id="@+id/edtpassword"
                android:fontFamily="@font/montserrat_light"
                android:hint="Enter Password"
                android:textSize="14dp"
                android:textColorHint="#95928e"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:background="@drawable/roundcorener_strokewhite"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tilpassword"
            android:text="Forgot Password?"
            app:layout_constraintTop_toBottomOf="@+id/tilpassword"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/txtforgotpassword"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@+id/txtforgotpassword"
            app:layout_constraintEnd_toEndOf="@+id/txtforgotpassword"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/txtforgotpassword"
            android:id="@+id/view"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="50dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@+id/rightGuideline"
            android:id="@+id/login"
            app:layout_constraintTop_toBottomOf="@+id/txtforgotpassword"
            android:background="@drawable/loginbuttonbackground"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Login"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/version"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Version 1.0.7"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#ff9200"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>