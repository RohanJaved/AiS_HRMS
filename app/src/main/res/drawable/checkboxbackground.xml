<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border for checked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" />
            <stroke
                android:width="2dp"
                android:color="@color/yellow" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</layer-list>